# Define color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running commit-msg hook...${NC}"

if npx --no -- commitlint --edit $1; then
    echo -e "${GREEN}Commit message meets the guidelines.${NC}"
else
    echo -e "${RED}Error: Commit message does not meet the guidelines.${NC}"
    exit 1
fi